#:import utils kivy.utils
<HomeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#000000")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            rows: 1
            markup: True
            font_size: '20sp'
            pos_hint: {"top": .95, "center_x": .5}
            size_hint: .45, .05
            markup: True
            text: "Lord Howe Island PSD"
        RoundedText:
            id: alt_airport
            markup: True
            multiline: False
            font_size: '20sp'
            hint_text: "alternate_airport"
            opacity: 1 if self.text else .7
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            padding_x: [10, 0]
            text: self.text.upper() if self.text is not None else ''
            size_hint: .3, .08
            pos_hint: {"top": .85, "center_x": .5}
            on_focus:
                app.enable_button()
        RoundedText:
            id: wind_direction
            markup: True
            multiline: False
            font_size: '20sp'
            hint_text: "wind_direction"
            opacity: 1 if self.text else .7
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            padding_x: [10, 0]
            text: self.text.upper() if self.text is not None else ''
            size_hint: .3, .08
            pos_hint: {"top": .75, "center_x": .5}
            on_focus:
                app.enable_button()
        RoundedText:
            id: windspeed
            markup: True
            multiline: False
            font_size: '20sp'
            hint_text: "windspeed"
            opacity: 1 if self.text else .7
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            padding_x: [10, 0]
            text: self.text.upper() if self.text is not None else ''
            size_hint: .3, .08
            pos_hint: {"top": .65, "center_x": .5}
            on_focus:
                app.enable_button()
        RoundedText:
            id: holding_mins
            markup: True
            multiline: False
            font_size: '20sp'
            hint_text: "holding_mins_at_altn"
            opacity: 1 if self.text else .7
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            padding_x: [10, 0]
            text: self.text.upper() if self.text is not None else ''
            size_hint: .3, .08
            pos_hint: {"top": .55, "center_x": .5}
            on_focus:
                app.enable_button()
        RoundedText:
            id: fuel_onboard
            markup: True
            multiline: False
            font_size: '20sp'
            hint_text: "fuel_onboard"
            opacity: 1 if self.text else .7
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            padding_x: [10, 0]
            text: self.text.upper() if self.text is not None else ''
            size_hint: .3, .08
            pos_hint: {"top": .45, "center_x": .5}
            on_focus:
                app.enable_button()
        RoundedText:
            id: dist_from_syd
            markup: True
            multiline: False
            font_size: '20sp'
            hint_text: "dist_from_syd"
            opacity: 1 if self.text else .7
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            padding_x: [10, 0]
            text: self.text.upper() if self.text is not None else ''
            size_hint: .3, .08
            pos_hint: {"top": .35, "center_x": .5}
            on_focus:
                app.enable_button()


        RoundedButton:
            text: "Calculate"
            id: go_button
            markup: True
            font_size: '20sp'
            pos_hint:  {"top": .25, "center_x": .5}
            size_hint: .3, .08
            padding: 20, 20
            opacity: 1 if self.state == 'normal' else .5
            disabled: True
            on_release:
                app.calculate()

        Label:
            rows: 1
            id: result
            markup: True
            font_size: '20sp'
            pos_hint: {"top": .1, "center_x": .5}
            size_hint: .45, .05
            markup: True

<RoundedText@TextInput>
    hint_text: self.hint_text
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: utils.get_color_from_hex("#1B7998")
    border_radius: 15
    color: self.back_color
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex("#EBECF2")
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)

<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (1,0,1,1)
    border_radius: [15]
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex("#1A4DA0")
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [15]